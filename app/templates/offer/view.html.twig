{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.offer_view'|trans({'%id%': offerId}) }}
{% endblock %}

{% block body %}
    <h1>
        {{ 'title.offer_view'|trans({'%id%': offerId}) }}
    </h1>
    {% if offer|length %}

        <table>
            <thead>
            <tr>
                <th>{{ 'offer_table.title'|trans }}</th>
                <th>{{ 'offer_table.url'|trans }}</th>
                <th>{{ 'offer_table.tag'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>
                    {{ offer.title }}
                </td>
                <td>
                    {{ offer.url }}
                </td>
                <td>
                    {% if tags|length %}
                        <ul>
                            {% for tag in tags %}
                                <li>{{ tag.name }}</li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </td>
            </tr>
            </tbody>
        </table>
        <a href="{{ url('offer_index') }}" class="table__link table__link--detail"
           title="{{ 'label.back_to_list'|trans }}">
            {{ 'label.back_to_list'|trans }}
        </a>
        <a href="{{ url('offer_edit', {'id': offer.id}) }}" class="table__link" title="{{ 'label.edit'|trans }}">
            {{ 'label.edit'|trans }}
        </a>
        <a href="{{ url('offer_delete', {'id': offer.id}) }}" class="table__link"
           title="{{ 'label.delete'|trans }}">
            {{ 'label.delete'|trans }}
        </a>
    {% else %}
        <div>
            {{ 'offer_not_found'|trans }}
        </div>
    {% endif %}

{% endblock %}